<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sliderColors.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            HorizontalOptions="CenterAndExpand">
            <BoxView
                WidthRequest="200"
                HeightRequest="200"
                CornerRadius="10"
                x:Name="boxColor"/>
            <Slider
                ValueChanged="Red_ValueChanged"
                x:Name="Red"/>
            <Slider
                ValueChanged="Green_ValueChanged"
                x:Name="Green"/>
            <Slider
                ValueChanged="Blue_ValueChanged"
                x:Name="Blue"/>
            <Label
                x:Name="nameColor"
                FontSize="30"
                FontAttributes="Bold"

                FontFamily="Poppins"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
